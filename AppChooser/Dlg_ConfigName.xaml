<Window x:Class="SPTR.AppChooser.Dlg_ConfigName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ac="clr-namespace:AppChooser"
             mc:Ignorable="d" 
        SizeToContent="Height" ResizeMode="NoResize"
        Title="Configuration Name" d:DesignHeight="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Select a new name for this configuration." Margin="5" />
        <TextBox Name="tb_Name" Margin="5" Grid.Row="1" />
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Margin="5" Content="OK" MinWidth="75" IsDefault="True" Click="btn_OK_Click" />
            <Button Margin="5" Content="Cancel" MinWidth="75" IsCancel="True" Click="btn_Cancel_Click" />
        </StackPanel>
    </Grid>
</Window>
